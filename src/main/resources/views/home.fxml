<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cooptool.business.controllers.HomeController">
    <children>
      <Pane fx:id="header_student">
         <children>
              <fx:include source="header_student.fxml" />
         </children>
      </Pane>
      <Pane fx:id="header_admin">
         <children>
              <fx:include source="header_admin.fxml" />
         </children>
      </Pane>
        <Button fx:id="mentoringDemandButton" layoutX="100.0" layoutY="200.0" mnemonicParsing="false" onAction="#displayMentoringDemand" prefHeight="232.0" prefWidth="269.0" style="-fx-background-color: #ff5f5f;" text="Demande de Tutorat " textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="Book Antiqua" size="34.0" />
            </font>
        </Button>
        <Button fx:id="quickHelpButton" alignment="CENTER" layoutX="450.0" layoutY="200.0" mnemonicParsing="false" onAction="#displayQuickHelp" prefHeight="240.0" prefWidth="269.0" style="-fx-background-color: #79D6FD;" text="Aide Rapide" textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="Book Antiqua" size="34.0" />
            </font>
        </Button>
      <StackPane layoutX="668.0" layoutY="107.0" prefHeight="75.0" prefWidth="103.0">
         <children>
            <ImageView fx:id="notificationImage" fitHeight="73.0" fitWidth="73.0" onMouseClicked="#goToNotificationPage" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/cloche.jpg" />
               </image>
            </ImageView>
            <Label fx:id="notificationNumber" alignment="CENTER" prefHeight="20.0" prefWidth="23.0" textFill="RED">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </StackPane>
    </children>
</AnchorPane>
