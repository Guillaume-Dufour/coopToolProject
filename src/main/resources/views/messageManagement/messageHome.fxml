<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cooptool.business.controllers.MessageController">
   <top>
      <fx:include maxHeight="1000.0" maxWidth="1500.0" source="../header.fxml" BorderPane.alignment="TOP_CENTER" />
   </top>
   <left>
      <ListView fx:id="resumeList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <Button fx:id="newMessageButton" mnemonicParsing="false" text="nouveau message " BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </Button>
   </bottom>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ListView prefHeight="200.0" prefWidth="200.0" />
            <TextArea prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets right="60.0" />
               </GridPane.margin>
            </TextArea>
            <Button mnemonicParsing="false" text="Button" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </center>
</BorderPane>
